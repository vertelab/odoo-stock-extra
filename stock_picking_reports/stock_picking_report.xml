<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    
    <template id="additinal_report_picking" inherit_id="stock.report_picking">
      <xpath expr="//th" position="before">
        <th>
          <strong>Ref</strong>
        </th>
      </xpath>
      <xpath expr="//td" position="before">
        <td>
          <span t-field="o.partner_id.customer_no" />
        </td>
      </xpath>
      <xpath expr="//tr[@t-foreach='o.pack_operation_ids']" position="before">
        <t t-set="total_quantity" t-value="0" />
        <t t-set="total_weight" t-value="0" />
      </xpath>
      <xpath expr="//tr[@t-foreach='o.pack_operation_ids']" position="inside">
        <t t-set="total_quantity" t-value="total_quantity + pack_operation.product_qty" />
        <t t-set="total_weight" t-value="total_weight + pack_operation.product_id.weight" />
      </xpath>
      <xpath expr="//tr[@t-foreach='o.pack_operation_ids']" position="after">
        <tr>
          <td class="text-right">
            <strong>Total</strong>
          </td>
          <td class="text-right">
            <span t-esc="total_quantity" />
          </td>
          <td class="text-right">
            <span t-esc="total_weight" />
          </td>
          <td />
          <td />
        </tr>
      </xpath>

      <xpath expr="//tr[@t-foreach='o.move_lines']" position="before">
        <t t-set="total_quantity" t-value="0" />
        <t t-set="total_weight" t-value="0" />
      </xpath>
      <xpath expr="//tr[@t-foreach='o.move_lines']" position="inside">
        <t t-set="total_quantity" t-value="total_quantity + move.product_qty" />
        <t t-set="total_weight" t-value="total_weight + move.weight" />
      </xpath>
      <xpath expr="//tr[@t-foreach='o.move_lines']" position="after">
        <tr>
          <td class="text-right">
            <strong>Total</strong>
          </td>
          <td class="text-right">
            <span t-esc="total_quantity" />
          </td>
          <td class="text-right">
            <span t-esc="total_weight" />
          </td>
          <td />
          <td />
        </tr>
      </xpath>

         <xpath expr="//table[@t-if='o.pack_operation_ids']/thead/tr" position="replace">
            <tr>
               <t t-if="o.picking_type_id.code != 'incoming'">
                  <th>
                     <strong>Source</strong>
                  </th>
               </t>
               <th>
                  <strong>Quantity</strong>
               </th>
               <th>
                  <strong>Product</strong>
               </th>
               <th class="text-right">
                  <strong>Weight</strong>
               </th>
               <th>
                  <strong>Barcode</strong>
               </th>
               <t t-if="o.picking_type_id.code != 'outgoing'">
                  <th>
                     <strong>Destination</strong>
                  </th>
               </t>
            </tr>
         </xpath>
         <xpath expr="//table[@t-if='o.pack_operation_ids']/tbody/tr" position="replace">
            <tr t-foreach="o.pack_operation_ids" t-as="pack_operation">
               <t t-if="o.picking_type_id.code != 'incoming'">
                  <td>
                     <span t-field="pack_operation.location_id" />
                     <span t-if="pack_operation.package_id">:</span>
                     <span t-field="pack_operation.package_id" />
                     <span t-if="pack_operation.lot_id">:</span>
                     <span t-field="pack_operation.lot_id" />
                  </td>
               </t>
               <td>
                  <span t-field="pack_operation.product_qty" />
                  <span t-field="pack_operation.product_uom_id" groups="product.group_uom" />
               </td>
               <td>
                  <span t-field="pack_operation.product_id" />
                  <t t-if="not pack_operation.product_id and pack_operation.package_id">
                     <span t-field="pack_operation.package_id" />
                  </t>
               </td>
               <td class="text-right">
                  <span t-field="move.weight" />
               </td>
               <td>
                  <span t-if="pack_operation.lot_id">
                     <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', pack_operation.lot_id.name, 600, 100)" style="width:300px;height:50px" />
                  </span>
                  <span t-if="pack_operation.product_id and not pack_operation.lot_id and pack_operation.product_id.ean13">
                     <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', pack_operation.product_id.ean13, 600, 100)" style="width:300px;height:50px" />
                  </span>
                  <span t-if="pack_operation.package_id and not pack_operation.product_id">
                     <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', pack_operation.package_id.name, 600, 100)" style="width:300px;height:50px" />
                  </span>
               </td>
               <t t-if="o.picking_type_id.code != 'outgoing'">
                  <td>
                     <span t-field="pack_operation.location_dest_id" />
                     <span t-if="pack_operation.result_package_id">:</span>
                     <span t-field="pack_operation.result_package_id" />
                  </td>
               </t>
            </tr>
         </xpath>
         <xpath expr="//table[@t-if='not o.pack_operation_ids']/thead/tr" position="replace">
            <tr>
               <t t-if="o.picking_type_id.code != 'incoming'">
                  <th>
                     <strong>Source</strong>
                  </th>
               </t>
               <th>
                  <strong>Quantity</strong>
               </th>
               <th>
                  <strong>Product</strong>
               </th>
               <th class="text-right">
                  <strong>Weight</strong>
               </th>
               <th>
                  <strong>Barcode</strong>
               </th>
               <t t-if="o.picking_type_id.code != 'outgoing'">
                  <th>
                     <strong>Destination</strong>
                  </th>
               </t>
            </tr>
         </xpath>
         <xpath expr="//table[@t-if='not o.pack_operation_ids']/tbody/tr/t" position="replace">
            <t t-if="(o.state != 'partially_available') or (move.reserved_availability &gt; 0)">
               <t t-if="o.picking_type_id.code != 'incoming'">
                  <td>
                     <span t-field="move.location_id" />
                  </td>
               </t>
               <td>
                  <t t-if="o.state == 'partially_available'">
                     <span t-field="move.reserved_availability" />
                     <span t-field="move.product_id.uom_id" groups="product.group_uom" />
                  </t>
                  <t t-if="o.state != 'partially_available'">
                     <span t-field="move.product_uom_qty" />
                     <span t-field="move.product_uom" groups="product.group_uom" />
                  </t>
               </td>
               <td>
                  <span t-field="move.product_id" />
               </td>
               <td class="text-right">
                  <span t-field="move.weight" />
               </td>
               <td>
                  <span t-if="move.product_id and move.product_id.ean13">
                     <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', move.product_id.ean13, 600, 100)" style="width:300px;height:50px" />
                  </span>
               </td>
               <t t-if="o.picking_type_id.code != 'outgoing'">
                  <td>
                     <span t-field="move.location_dest_id" />
                  </td>
               </t>
            </t>
         </xpath>
    </template>
  </data>
</openerp>
